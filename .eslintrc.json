{
  "extends": ["opencollective"],
  "parserOptions": { "babelOptions": { "configFile": "./.babelrc" } },
  "env": {
    "jest": true
  },
  "rules": {
    "no-console": "warn",
    "require-await": "warn",
    "no-constant-condition": ["warn", { "checkLoops": false }],
    "require-atomic-updates": "warn",
    "react/no-unknown-property": ["error", { "ignore": ["jsx", "global"] }]
  }
}
