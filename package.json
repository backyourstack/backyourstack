{
  "name": "backyourstack",
  "version": "0.2.0",
  "description": "BackYourStack analyzes repositories to recommend Open Source projects to support.",
  "repository": {
    "type": "git",
    "url": "https://github.com/opencollective/backyourstack.git"
  },
  "scripts": {
    "dev": "nodemon --exec babel-node -- src/server/index.js",
    "build": "npm run build:server && npm run build:next",
    "build:server": "babel --copy-files ./src --out-dir ./build",
    "build:next": "next build build",
    "start": "NODE_ENV=production node build/server/index.js",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "lint:quiet": "npm run lint -- --quiet",
    "test": "npm run lint:quiet"
  },
  "author": {
    "name": "Open Collective, Inc.",
    "email": "team@opencollective.com"
  },
  "contributors": [
    "Fran√ßois Hodierne <francois@opencollective.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^15.9.5",
    "@zeit/next-css": "^0.2.0",
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.3",
    "cross-fetch": "^2.2.2",
    "debug": "^3.1.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "fs-extra": "^7.0.0",
    "graphql-request": "^1.8.0",
    "lodash": "^4.17.10",
    "lru-cache": "^4.1.3",
    "md5": "^2.2.1",
    "moment": "^2.22.2",
    "multer": "^1.3.1",
    "next": "^6.1.1",
    "next-routes": "^1.4.2",
    "nprogress": "^0.2.0",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-dropzone": "^4.3.0",
    "serve-favicon": "^2.5.0"
  },
  "engines": {
    "node": "10.x.x"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.42",
    "@babel/node": "7.0.0-beta.42",
    "@babel/preset-env": "7.0.0-beta.42",
    "@babel/preset-stage-0": "7.0.0-beta.42",
    "@mdx-js/loader": "^0.15.0-2",
    "@mdx-js/mdx": "^0.15.0-2",
    "babel-eslint": "^8.2.6",
    "babel-plugin-lodash": "^3.3.4",
    "eslint": "^5.3.0",
    "eslint-config-opencollective": "^1.4.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-react": "^7.10.0",
    "nodemon": "^1.18.3",
    "svg-react-loader": "^0.4.5"
  },
  "eslintConfig": {
    "extends": "opencollective",
    "rules": {
      "react/display-name": "off",
      "no-console": "warn",
      "require-await": "warn",
      "no-extra-semi": "warn",
      "curly": "warn",
      "no-multi-spaces": "warn",
      "space-before-function-paren": [
        "warn",
        "always"
      ],
      "no-constant-condition": [
        "warn",
        {
          "checkLoops": false
        }
      ]
    }
  },
  "nodemonConfig": {
    "watch": [
      "lib/*.js",
      "server/*.js",
      "routes.js"
    ]
  },
  "now": {
    "type": "npm",
    "alias": [
      "backyourstack",
      "backyourstack.com",
      "www.backyourstack.com"
    ],
    "env": {
      "GITHUB_CLIENT_ID": "@github_client_id",
      "GITHUB_CLIENT_SECRET": "@github_client_secret",
      "GITHUB_GUEST_TOKEN": "@github_guest_token",
      "GITHUB_TOKEN_DONATORS": "@github_token_donators",
      "MAILCHIMP_API_KEY": "@mailchimp_api_key",
      "MAILCHIMP_API_URL": "@mailchimp_api_url"
    }
  },
  "greenkeeper": {
    "ignore": [
      "@babel/cli",
      "@babel/node",
      "@babel/preset-env",
      "@babel/preset-stage-0",
      "@babel/runtime",
      "styled-jsx",
      "webpack"
    ]
  }
}
