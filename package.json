{
  "name": "backyourstack",
  "version": "1.1.0",
  "description": "BackYourStack analyzes repositories to recommend Open Source projects to support.",
  "repository": {
    "type": "git",
    "url": "https://github.com/backyourstack/backyourstack.git"
  },
  "scripts": {
    "clean": "npm run build:clean && npm run test:clean",
    "deploy:production": "git push production main",
    "dev": "nodemon --exec babel-node -- src/server/index.js",
    "build": "npm run build:clean && npm run build:server && npm run build:next",
    "build:clean": "rimraf dist src/.next",
    "build:server": "babel --copy-files ./src --out-dir ./dist --ignore src/pages/*,src/components/*",
    "build:next": "next build dist",
    "start": "NODE_ENV=production node dist/server/index.js",
    "lint": "eslint \"src/**/*.js\" \"test/**/*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "lint:quiet": "npm run lint -- --quiet",
    "prettier": "prettier \"*.json\" \"src/**/*.js\" \"src/**/*.css\" \"src/data/*.json\" \"test/**/*.js\"",
    "prettier:write": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --list-different",
    "test": "NODE_ENV=test jest",
    "test:clean": "rimraf coverage",
    "coverage": "codecov",
    "update-collectives": "babel-node src/scripts/update-collectives",
    "detect-packages": "./src/scripts/detect-all-packages.sh",
    "sync-projects-with-opencollective": "babel-node src/scripts/sync-projects-with-opencollective"
  },
  "author": {
    "name": "Open Collective, Inc.",
    "email": "team@opencollective.com"
  },
  "contributors": [
    "Fran√ßois Hodierne <francois@opencollective.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "@babel/core": "7.12.10",
    "@mdx-js/mdx": "^1.6.6",
    "@octokit/rest": "^18.9.1",
    "aws-sdk": "^2.713.0",
    "bluebird": "^3.7.2",
    "classnames": "^2.3.1",
    "cookie-parser": "^1.4.5",
    "cross-fetch": "^3.0.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "fs-extra": "^9.0.1",
    "gemfile": "^1.1.0",
    "graphql-request": "^1.8.2",
    "lodash": "^4.17.21",
    "lru-cache": "^6.0.0",
    "md5": "^2.2.1",
    "minimatch": "^3.0.4",
    "moment": "^2.29.1",
    "multer": "^1.4.2",
    "next": "11.1.0",
    "next-routes": "^1.4.2",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.6.3",
    "nprogress": "^0.2.0",
    "passport": "^0.4.1",
    "passport-github": "^1.1.0",
    "prop-types": "^15.7.2",
    "pure-react-carousel": "^1.27.1",
    "query-string": "^7.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^7.0.1",
    "react-icons": "^3.10.0",
    "react-modal": "^3.11.2",
    "react-number-format": "^4.7.3",
    "serve-favicon": "^2.5.0",
    "styled-jsx": "3.3.2",
    "toml": "^3.0.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "xmldoc": "^1.1.2"
  },
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  },
  "devDependencies": {
    "@babel/cli": "7.12.10",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/node": "7.12.10",
    "@mdx-js/loader": "^1.6.22",
    "babel-loader": "^8.1.0",
    "babel-plugin-lodash": "^3.3.4",
    "codecov": "^3.8.3",
    "eslint": "^7.32.0",
    "eslint-config-opencollective": "^3.0.1",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.24.0",
    "file-loader": "^6.0.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "svg-react-loader": "^0.4.6",
    "thanks": "^2.3.0",
    "webpack-bundle-analyzer": "^4.4.2"
  },
  "nodemonConfig": {
    "watch": [
      "src/server",
      "src/routes.js",
      "src/lib"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
