{
  "name": "backyourstack",
  "version": "1.1.0",
  "description": "BackYourStack analyzes repositories to recommend Open Source projects to support.",
  "repository": {
    "type": "git",
    "url": "https://github.com/opencollective/backyourstack.git"
  },
  "scripts": {
    "dev": "nodemon --exec babel-node -- src/server/index.js",
    "build": "npm run build:clean && npm run build:server && npm run build:next",
    "build:clean": "rm -rf dist src/.next",
    "build:server": "babel --copy-files ./src --out-dir ./dist --ignore src/pages/*,src/components/*",
    "build:next": "next build dist",
    "start": "NODE_ENV=production node dist/server/index.js",
    "lint": "eslint \"src/**/*.js\" \"test/**/*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "lint:quiet": "npm run lint -- --quiet",
    "prettier": "prettier \"*.json\" \"src/**/*.js\" \"src/data/*.json\" \"test/**/*.js\"",
    "prettier:write": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --list-different",
    "test": "NODE_ENV=test jest",
    "update-collectives": "babel-node src/scripts/update-collectives",
    "detect-packages": "./src/scripts/detect-all-packages.sh",
    "sync-projects-with-opencollective": "babel-node src/scripts/sync-projects-with-opencollective"
  },
  "author": {
    "name": "Open Collective, Inc.",
    "email": "team@opencollective.com"
  },
  "contributors": [
    "Fran√ßois Hodierne <francois@opencollective.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^16.15.0",
    "@zeit/next-css": "^1.0.1",
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.4",
    "cross-fetch": "^3.0.1",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "fs-extra": "^7.0.1",
    "gemfile": "^1.1.0",
    "graphql-request": "^1.8.2",
    "lodash": "^4.17.11",
    "lru-cache": "^5.1.1",
    "md5": "^2.2.1",
    "moment": "^2.24.0",
    "multer": "^1.4.1",
    "next": "8.0.3",
    "next-routes": "^1.4.2",
    "nprogress": "^0.2.0",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0",
    "prop-types": "^15.7.1",
    "query-string": "^6.2.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-dropzone": "^7.0.1",
    "serve-favicon": "^2.5.0",
    "toml": "^3.0.0",
    "winston": "^3.2.1",
    "xmldoc": "^1.1.2"
  },
  "engines": {
    "node": "10.x.x"
  },
  "devDependencies": {
    "@babel/cli": "7.1.2",
    "@babel/node": "7.0.0",
    "@mdx-js/loader": "^0.20.3",
    "@mdx-js/mdx": "^0.20.3",
    "babel-eslint": "^10.0.1",
    "babel-plugin-lodash": "^3.3.4",
    "eslint": "^5.13.0",
    "eslint-config-opencollective": "^1.5.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^9.0.0",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "react-test-renderer": "^16.8.1",
    "svg-react-loader": "^0.4.6",
    "thanks": "^2.0.0",
    "webpack-bundle-analyzer": "^3.0.4"
  },
  "nodemonConfig": {
    "watch": [
      "src/server",
      "src/routes.js"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "@babel/cli",
      "@babel/node",
      "react-dropzone"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
