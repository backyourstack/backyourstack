{
  "name": "backyourstack",
  "version": "0.0.1",
  "description": "Back Your Stack analyzes repositories to recommend Open Source projects to support.",
  "scripts": {
    "dev": "nodemon server/index.js",
    "build": "next build",
    "start": "NODE_ENV=production node server/index.js",
    "lint": "eslint '**/*.js'",
    "lint:fix": "npm run lint -- --fix",
    "lint:quiet": "npm run lint -- --quiet",
    "pretest": "npm run lint:quiet"
  },
  "author": {
    "name": "Open Collective, Inc.",
    "email": "team@opencollective.com"
  },
  "contributors": [
    "Fran√ßois Hodierne <francois@opencollective.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^15.8.2",
    "cross-fetch": "^2.2.1",
    "debug": "^3.1.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "lodash": "^4.17.10",
    "lru-cache": "^4.1.3",
    "next": "^6.0.3",
    "next-routes": "^1.4.2",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0"
  },
  "engines": {
    "node": "9.x.x"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-config-opencollective": "^1.2.1",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-react": "^7.9.1",
    "nodemon": "^1.17.5"
  },
  "eslintConfig": {
    "extends": [
      "opencollective",
      "plugin:node/recommended",
      "plugin:import/recommended"
    ],
    "plugins": [
      "babel",
      "node"
    ],
    "rules": {
      "semi": "warn",
      "object-curly-spacing": [
        "warn",
        "always"
      ],
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "babel/quotes": [
        "warn",
        "single"
      ],
      "node/no-unsupported-features": "off",
      "no-constant-condition": [
        "warn",
        {
          "checkLoops": false
        }
      ],
      "react/display-name": "off",
      "react/react-in-jsx-scope": "off"
    }
  },
  "nodemonConfig": {
    "watch": [
      "lib/*.js",
      "server/*.js",
      "routes.js"
    ]
  }
}
